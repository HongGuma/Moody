<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/avatar"/>
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo"
        android:gravity="center">
        <EditText
            android:id="@+id/login_email"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@drawable/border"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_textInputLayout1"
        android:gravity="center">
        <EditText
            android:id="@+id/login_pw"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/border"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_loginBtn"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_textInputLayout2" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="360dp"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#393939"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_loginBtn"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@+id/line"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:gravity="center">
       <Button
           android:id="@+id/login_signBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="회원가입"
           android:background="#00ff0000"
           android:stateListAnimator="@null"
           android:layout_marginRight="5dp" />

       <Button
           android:id="@+id/login_findBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:text="비밀번호 찾기"
           android:stateListAnimator="@null"
           android:background="#00ff0000"/>
   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>